{
  "apps": [{
    "name": "stonerose-backend",
    "script": "src/index.js",
    "instances": 1,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "env_file": ".env.production",
    "error_file": "logs/error.log",
    "out_file": "logs/access.log",
    "log_file": "logs/combined.log"
  }]
}